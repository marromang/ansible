$ORIGIN {{zone}}.
$TTL    86400
@       IN      SOA     {{ansible_hostname}}.{{zone}}. root@{{ansible_hostname}}.{{zone}} (
                              1         ; serial
                          21600         ; Refresh (6 hours)
                           3600         ; Retry (1 hour)
                         604800         ; Expire (1 week)
                          21600 )       ; Negative Cache TTL (6 hours)

                MX  10  {{ansible_hostname}}
                NS      {{ansible_hostname}}
{{ ansible_hostname }}	IN	A	{{ ansible_eth2.ipv4.address }}
nodo2	IN	A	{{ nodo2 }}
{{ server }}	IN	CNAME  nodo2
